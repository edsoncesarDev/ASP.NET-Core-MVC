@model FileManagerModel

@{
    ViewBag.Title = "Arquivos";
}

@if (Model.Files != null)
{
    <h3>Imagens:</H3>
    <hr />
    var caminho = Model.PathImagesProdutos;
    <div class="row">
        @foreach (FileInfo file in Model.Files)
        {
            <div class="column">
                <img src="~/@caminho/@file.Name" title="@file.Name" asp-append-version="true" width="125" height="125">
                <div style="padding:10px; text-align:left;">
                    <a href="@Url.Action("Deletefile","AdminImagens", new {fname=file.Name})">Deletar</a>
                </div>
            </div>
        }
    </div>

}
